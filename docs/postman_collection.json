{
  "info": {
    "name": "PandaGamers API - Minimal",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Colección mínima para probar endpoints críticos"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{ \"nombre\": \"Juan\", \"email\": \"juan@example.com\", \"password\": \"clave123\" }" },
        "url": { "raw": "http://localhost:4000/api/auth/register", "protocol": "http", "host": ["localhost"], "port": "4000", "path": ["api","auth","register"] }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{ \"email\": \"juan@example.com\", \"password\": \"clave123\" }" },
        "url": { "raw": "http://localhost:4000/api/auth/login", "protocol": "http", "host": ["localhost"], "port": "4000", "path": ["api","auth","login"] }
      }
    },
    {
      "name": "List Products",
      "request": { "method": "GET", "url": { "raw": "http://localhost:4000/api/products", "protocol": "http", "host": ["localhost"], "port": "4000", "path": ["api","products"] } }
    },
    {
      "name": "Create Payment (requires token)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer <TOKEN>" }],
        "body": { "mode": "raw", "raw": "{ \"total\": 15000, \"items\": [{ \"id\": null, \"nombre\": \"Prueba\", \"cantidad\": 1, \"precio\": 15000 }], \"shippingInfo\": { \"deliveryOption\": \"express\", \"email\": \"juan@duocuc.cl\" } }" },
        "url": { "raw": "http://localhost:4000/api/payment", "protocol": "http", "host": ["localhost"], "port": "4000", "path": ["api","payment"] }
      }
    }
  ]
}
